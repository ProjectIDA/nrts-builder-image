{
    "variables": {
        "aws_access_key": "{{user `AWSKEY`}}",
        "aws_secret_key": "{{user `AWSSECRET`}}",
        "ami_name": "{{user `ami_name`}}",
        "aws_region": "us-east-2",
        "ssh_username": "ubuntu",
        "vpc_id": "vpc-0b63f5f53901d0dec",
        "subnet_id": "subnet-0946e737a30958159"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "instance_type": "t3.large",
        "force_deregister": "true",
        "ssh_username": "{{user `ssh_username`}}",
        "communicator": "ssh",
        "associate_public_ip_address": true,
        "subnet_id": "{{user `subnet_id`}}",
        "ami_name": "{{user `ami_name`}}",
        "ami_regions": ["us-east-2"],
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "image-id": "{{user `source_ami_name`}}",
                "root-device-type": "ebs",
                "architecture": "x86_64"
            },
            "most_recent": true,
            "owners": ["{{user `source_ami_owner`}}"]
        },
        "run_tags": {
            "Name": "packer-DCC-image"
        }
    }],
    "provisioners": [{
        "type": "shell",
        "inline": "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
    },
    {
        "type": "shell",
        "inline": "ls -l ~/.ssh"
    },
    {
        "type": "ansible",
        "extra_arguments": [ "-vv",
        "--extra-vars", "home_location=/home git_branch=master"
        ],
        "ansible_ssh_extra_args":[ "-o IdentitiesOnly=yes" ],
        "playbook_file": "./prov-nrts-builder-image.yml"
    }]
    }
    
