{
    "variables": {
        "aws_access_key": "{{user `AWSKEY`}}",
        "aws_secret_key": "{{user `AWSSECRET`}}",
        "ami_name": "ida-nrts-hub",
        "aws_region": "us-west-2",
        "ssh_username": "ec2-user",
        "vpc_id": "vpc-7be41303",
        "subnet_id": "subnet-0a3a4b419a49ca17c"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "instance_type": "t2.micro",
        "force_deregister": "true",
        "ssh_username": "{{user `ssh_username`}}",
        "communicator": "ssh",
        "associate_public_ip_address": true,
        "subnet_id": "{{user `subnet_id`}}",
        "ami_name": "{{user `ami_name`}}",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn2-ami-hvm*",
                "root-device-type": "ebs"
            },
            "owners": ["137112412989"],
            "most_recent": true
        },
        "run_tags": {
            "Name": "packer-build-image"
        }
    }],
    "provisioners": [{
        "type": "shell",
        "inline": "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
    },
    {
        "type": "ansible",
        "extra_arguments": [ "--extra-vars", 
            "home_location=/home git_branch=master",
            "--tags base"
        ],
        "playbook_file": "./prov-nrts-builder-image.yml"
    }]
}
